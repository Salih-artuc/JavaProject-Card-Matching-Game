<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cardmatchinggame.controllers.MainMenuController"
      styleClass="menu-background"
      stylesheets="@../styles/styles.css">
    
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
    </padding>

    <Text styleClass="menu-title" text="Ana Menü"/>
    
    <VBox spacing="20" alignment="CENTER" maxWidth="400">
        <Button fx:id="playButton" text="Oyna" onAction="#handlePlay" styleClass="menu-button"/>
        <Button fx:id="scoresButton" text="Skorlar" onAction="#handleScores" styleClass="menu-button"/>
        <Button fx:id="logOutButton" text="Çıkış" onAction="#handleLogOut" styleClass="menu-button"/>
    </VBox>
</VBox> 